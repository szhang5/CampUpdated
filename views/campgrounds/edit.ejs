<% include ../partials/header2 %>

 <div class="row" style="margin-top: 5%;">
    <div class="card">
        <h2>Edit <%= campground.name %></h2>
        <div class="container">
            <form class="ui form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
              <div>
                  <label><b>Title</b></label>
                  <input type="text" name="campground[name]" value="<%=campground.name  %>">
              </div>
              <div>
                  <label><b>Price</b></label>
                  <input type="number" name="campground[price]" value="<%=campground.price  %>">
              </div>
              <div>
                  <label><b>Image</b></label>
                  <input type="text" name="campground[image]" value="<%= campground.image %>">
              </div>
              <div >
                  <label><b>Camground Content</b></label>
                  <textarea name="campground[description]"><%= campground.description %></textarea>
              </div>
              <div>
                <a class="btn-defult" href="/campgrounds/<%= campground._id %>">Cancel</a>
                <button class="btn-defult" type="submit" style="padding:10px 30px; background-color: #00b8ff; color:white">Save</button>
              </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>